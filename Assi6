#Pract no 6:Implement and visualize Dependency Parsing of Textual Input using Standford CoreNLP and Spacy library

from spacy import displacy
import spacy 
nlp=spacy.load("en_core_web_")
piano_text = "Javapoint is a recognised platform for online learning in India"
piano_doc = nlp(piano_text)
for token in piano_doc:
print(
f"""
TOKEN: {token.text}
{token.tag_ = }
{token.head.text = }
{token.dep_ = }""")
displacy.serve(piano_doc, style="dep")

# OUTPUT:
# TOKEN: Javapoint 
# token.tag_ = 'NNP'
# token.head.text = 'is'
# token.dep_ = 'nsubj'
# TOKEN: is
# token.tag_ = 'VBZ'
# token.head.text = 'is'
# token.dep_ = 'ROOT'
# TOKEN: a
# token.tag_ = 'DT'
# token.head.text = 'platform'
# token.dep_ = 'det'
# TOKEN: recognised
# token.tag_ = 'VBN'
# token.head.text = 'platform'
